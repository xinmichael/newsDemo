.topLine {
  width: 100%;
  height: 3rpx;
  background: #34a0e2;
  margin-top: 130rpx;
}

.newsTitle {
  padding: 40rpx 30rpx 30rpx 30rpx;
  font-size: 50rpx;
  line-height: 70rpx;
}

.newsBaseInfo {
  display: flex;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.7;
  padding: 0rpx 30rpx 30rpx 30rpx;
}

.newsBaseInfo-source {
  padding-right: 30rpx;
}

.newsBaseInfo-readCount {
  position: absolute;
  right: 30rpx;
}

.newsContent {
  display: flex;
  font-size: 30rpx;
  line-height: 42rpx;
  padding: 10rpx 30rpx 10rpx 30rpx;
}

.newsContent-image {
  display: flex;
  width: 100%;
  padding: 30rpx 0rpx 30rpx 0rpx;
}

.newsContent-strong {
  font-weight: 700;
}
