.appHead{
  display: flex;
  background: #34a0e2;
  color: white;
  padding-top: 60rpx;
  padding-bottom: 20rpx;
}

.appLogo{
  width: 65rpx;
  height: 65rpx;
  padding-left: 20rpx;
}

.appName{
  font-size: 30rpx;
  font-weight: 600;
  line-height: 42rpx;
  padding-left: 30rpx;
  padding-top: 8rpx;
  text-align: center;
  justify-content: center; 
}

.newsHead {
  display: flex;
  background: #34a0e2;
  color: white;
  padding-bottom: 10rpx;
}

.newsClass-normal {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  /* flex-shrink: 0; */
  width: 100%;
  font-size: 35rpx;
  font-weight: 600;
  line-height: 49rpx;
  opacity: 0.7;
}

.newsClass-ischecked {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
  font-size: 35rpx;
  font-weight: 600;
  line-height: 49rpx;
}

.checkedLine-hide {
  width: 30rpx;
  height: 4rpx;
  opacity: 0.7;
  margin-top: 10rpx;
}

.checkedLine-show {
  width: 30rpx;
  height: 4rpx;
  background: white;
  opacity: 0.7;
  margin-top: 10rpx;
}

.hotNews-wrapper {
  position: relative;
  margin: 20rpx 20rpx 20rpx 20rpx;
}

.hotNews-firstImage {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.hotNews-title {
  padding-top: 230rpx;
  color: white;
  font-size: 35rpx;
  line-height: 49rpx;
  height: 98rpx;
  font-weight: 700;
  margin: 0rpx 20rpx 0rpx 20rpx;
}

.hotNews-info {
  display: flex;
}

.hotNews-source {
  color: white;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 700;
  margin: 0rpx 20rpx 0rpx 20rpx;
  opacity: 0.7;
}

.hotNews-date {
  flex-grow: 1;
  color: white;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 700;
  margin: 0rpx 20rpx 10rpx 20rpx;
  opacity: 0.7;
}

.otherNewsList {
  display: flex;
  flex-direction: column;
}

.otherNews {
  display: flex;
  height: 170rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  margin: 0rpx 20rpx 10rpx 20rpx;
  align-items: center;
  flex-shrink: 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.otherNews-baseInfo {
  width: 500rpx;
  margin: 0rpx 20rpx 0rpx 0rpx;
  top:0;
}

.otherNews-title{
  top:0;
}

.otherNews-baseInfo-from {
  display: flex;
  opacity: 0.5;
}

.otherNews-source {
  margin: 0rpx 20rpx 0rpx 0rpx;
}

.otherNews-date {
  margin: 0rpx 20rpx 0rpx 20rpx;
}

.otherNews-firstImage {
  width: 200rpx;
  height: 150rpx;
}
